@model IEnumerable<KLFBlog.Models.BlogPostViewModel>

<link href="~/Content/bootstrap-social.css" rel="stylesheet">
<div class="col-md-4 col-sm-4">
    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Header -->
        <h4 class="br-lblue"> <i class="fa fa-search"></i> SEARCH</h4>
        <!-- Widget -->
        <div class="widget">
            <!-- Form -->
            <form class="form-inline">
                <!--Form Group -->
                <div class="form-group" method="get" action="@Url.Action("Posts")"
                     data-klf-ajax="true" data-kyle-targe="#postList">
                    <input type="search" class="form-control" name="searchTerm" data-klf-autocomplete="@Url.Action("Autocomplete")">
                </div>
                <div class="form-group">
                    <!-- Button -->
                    <input type="submit" class="btn btn-info" />
                </div>
            </form>
        </div>
        <h4 class="br-pink"> <i class="fa fa-gift"></i> RECENT POSTS</h4>
        <!-- Widget -->
        <div class="widget">
            <ul>
                @foreach (KLFBlog.Models.BlogPostViewModel BlogPost in Model)
                {
                    @Html.Partial("_RecentPostList", BlogPost)
                }
            </ul>
        </div>
        <h4 class="br-orange"> <i class="fa fa-user"></i> Stay Connected</h4>
        <!-- Widget -->
        <div class="widget">
            <p></p>
            <div class="social">
                <!-- Icons -->
                <a href="http://facebook.com/kfrisbie" class="btn btn-facebook" target="_blank"> <i class="fa fa-facebook"></i> </a>
                <a href="https://twitter.com/KyleLaneFrisbie" class="btn btn-twitter" target="_blank"> <i class="fa fa-twitter"></i> </a>
                <a href="https://github.com/KyleFrisbie" class="btn btn-github" target="_blank"> <i class="fa fa-github"></i> </a>
                <a href="https://www.linkedin.com/in/kylelfrisbie" class="btn btn-linkedin" target="_blank"> <i class=" fa fa-linkedin"></i> </a>
            </div>
        </div>
    </div>
</div>